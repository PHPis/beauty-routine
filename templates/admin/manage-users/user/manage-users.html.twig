{% extends 'admin/base.html.twig' %}

{% block body %}
    {% include 'admin/navigation.html.twig' %}

    <div class="container">
        <div class="row flex-column flex-sm-row mt-4">
            <div class="col-md-3">
                {% include('admin/manage-users/left-panel.html.twig') %}
            </div>

            <div class="col-md-9">
                <div class="search-form">
                    <form action="{{ path('admin.users') }}" method="get" class="form-inline">
                        <div class="form-group mx-sm-3 mb-2">
                            <input type="text" class="form-control" name="search" id="findUser" placeholder="Name or e-mail"
                                    {% if (app.request.get('search')) %} value="{{ app.request.get('search') }}" {% endif %}>
                        </div>
                        <div class="form-check mx-sm-3 mb-2">
                            <input class="form-check-input" type="checkbox" name="valid" id="checkValidUser"
                                    {% if (app.request.get('valid')) %} checked {% endif %}>
                            <label class="form-check-label" for="checkValidUser">
                                Only not verified
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary mb-2">Search</button>
                    </form>
                </div>
                <div class="search-result pt-3">

                    {% include('admin/manage-users/user/user-table.html.twig') %}

                </div>
            </div>

        </div>
    </div>

{% endblock %}